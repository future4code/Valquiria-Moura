function aFazer (tarefa) {
	return {
		type: 'A_FAZER',
		payload: {
			afazer: tarefa
		}
	}
}

function checarTarefa (check) {
	return {
		type: 'CHECAR_TAREFA',
		payload: {
			checagem: check
		}
	}
}

function cancelaTarefa (cancelar) {
	return {
		type: 'CANCELA_TAREFA',
		payload: {
			excluir: cancelar
		}
	}
}

function marcarTodasCompletas (check) {
	return {
		type: 'MARCAR_TODAS_COMPLETAS',
		payload: {
			checartudo: check
		}
	}
}

function mostrarTodas (tarefas) {
	return {
		type: 'MOSTRAR_TODAS',
		payload: {
		todas: tarefas
		}
	}
}

function mostrarPendentes (check) {
	return {
		type: 'MOSTRAR_PENDENTES',
		payload: {
			pendentes: check
		}
	}
}

function mostrarCompletas (check) {
	return {
		type: 'MOSTRAR_COMPLETAS',
		payload: {
			completas: check
		}
	}
}

